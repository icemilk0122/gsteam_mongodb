<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <div>姓名<br />
    <%= f.text_field :name, :autofocus => true %></div>
  
  <div>Email<br />
    <%= f.email_field :email %></div>
  
  <div>年齡<br />
    <%= f.input :age, collection: 18..99 %></div>
  
  <div>性別<br />
    <%= f.text_field :gender %></div>
  
  <div>生日<br />
    <%= f.input :birthday, as: :date, start_year: Date.today.year - 90,
  end_year: Date.today.year - 12, discard_day: false,use_month_numbers: true,
  order: [:year, :month, :day] %></div>
  
  <div>職業<br />
    <%= f.text_field :work %></div>
  
  <div>介紹人<br />
    <%= f.text_field :upline %></div>
  
  <div>電話<br />
    <%= f.text_field :tel %></div>
  
  <div>住址<br />
    <%= f.text_field :address %></div>
  
  <div>Skype<br />
    <%= f.text_field :skype %></div>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Sign up" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
